<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Course Card"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <image
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldLabel="Course Image"
                            name="./courseImage"/>
                    <title
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Course Title"
                            name="./courseTitle"/>
                    <description
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                            fieldLabel="Course Description"
                            name="./courseDescription"/>
                    <courseLevel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Course Level"
                            name="./courseLevel">
                        <items jcr:primaryType="nt:unstructured">
                            <beginner jcr:primaryType="nt:unstructured"
                                      text="Beginner"
                                      value="beginner"/>
                            <intermediate jcr:primaryType="nt:unstructured"
                                          text="Intermediate"
                                          value="intermediate"/>
                            <advanced jcr:primaryType="nt:unstructured"
                                      text="Advanced"
                                      value="advanced"/>
                        </items>
                    </courseLevel>
                    <courseCategory
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Course Category"
                            name="./courseCategory">
                        <items jcr:primaryType="nt:unstructured">
                            <programming jcr:primaryType="nt:unstructured"
                                         text="Programming"
                                         value="programming"/>
                            <web jcr:primaryType="nt:unstructured"
                                 text="Web Development"
                                 value="web"/>
                            <cloud jcr:primaryType="nt:unstructured"
                                   text="Cloud Computing"
                                   value="cloud"/>
                            <data jcr:primaryType="nt:unstructured"
                                  text="Data Science"
                                  value="data"/>
                        </items>
                    </courseCategory>
                    <coursePrice
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Course Price"
                            name="./coursePrice"/>
                    <courseDuration
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Course Duration"
                            name="./courseDuration"
                            placeholder="e.g., 8 weeks"/>
                    <modules
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            composite="{Boolean}true"
                            fieldLabel="Course Modules">
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                name="./modules">
                            <items jcr:primaryType="nt:unstructured">
                                <modulename
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Module Name"
                                        name="./moduleName"/>
                            </items>
                        </field>
                    </modules>
                </items>
            </column>
        </items>
    </content>
</jcr:root>